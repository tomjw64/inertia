{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es2020",
    "target": "es6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "paths": {
      "three/addons/controls/*": ["./node_modules/@types/three/examples/jsm/controls/*"],
    },
  }
}
